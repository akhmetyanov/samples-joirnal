<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SamplesJournal_v2.Views.File.FilesPage">
    <ContentPage.Title>Файлы</ContentPage.Title>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Создать" Command="{Binding GoToCreateFilePageCommand}"/>
        <ToolbarItem Text="Загрузить из файла" Command="{Binding CreateFromFileCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <ListView ItemsSource="{Binding Files}">
                    <ListView.ItemTemplate>
                        <DataTemplate>

                            <TextCell Text="{Binding Name}" Command="{Binding SelectThisCommand}"></TextCell>

                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>